<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Product">


	<select id="mainCategory"
		resultType="com.catchbug.biz.vo.MainCategoryVO">
		SELECT *
		FROM main_category
	</select>

	<select id="subCategory"
		resultType="com.catchbug.biz.vo.SubCategoryVO">
		SELECT *
		FROM sub_category
	</select>
	
	<insert id="insertProduct" parameterType="product">

		INSERT INTO product
		values(#{product_no},#{sub_category},#{product_name},#{price},sysdate,#{product_img},#{brand},#{uuid})
	</insert>

	<insert id="insertImg" parameterType="com.catchbug.biz.vo.ImgVO">
		INSERT INTO img
		values(#{product_no}, #{fileName}, #{uploadPath}, #{uuid})
	</insert>
	

	<select id="getProduct" parameterType="product" resultType="product">
		SELECT *
		FROM product
		WHERE product_no = #{product_no}
	</select>
	
	<update id="updateProduct" parameterType="product">
		UPDATE product
		SET sub_category = #{sub_category}, product_name = #{product_name}, price = #{price},add_day = sysdate, product_img = #{product_img}, brand = #{brand}, uuid = #{uuid}
		WHERE product_no = #{product_no}
	</update>
	
	<update id="updateImg" parameterType="com.catchbug.biz.vo.ImgVO">
		UPDATE img
		SET filename = #{fileName}, uploadPath = #{uploadPath}, uuid = #{uuid}
		WHERE product_no = #{product_no}
	</update>
	
	<delete id="deleteProduct" parameterType="product">
		DELETE FROM product
		WHERE product_no = #{product_no}
	</delete>

	<select id="getProductItem" resultType="orderItem">
		select product_no,product_name,price from product where product_no=#{product_no}
	</select>

	<select id="getProductList" resultType="product">
		select * from product order by add_day desc
	</select>

	<select id="getProductListC" parameterType="category"
		resultType="product">
		select * from product where sub_category=#{sub_category}
	</select>


</mapper>